{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ profile.title }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ profile.created ? profile.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ profile.file }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ profile.enable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ForAll</th>
                <td>{{ profile.forAll ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('profile_index') }}">back to list</a>

    <a href="{{ path('profile_edit', {'id': profile.id}) }}">edit</a>

    {{ include('profile/_delete_form.html.twig') }}
{% endblock %}
